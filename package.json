{
  "name": "explorerGitTools",
	"displayName": "Explorer Git Tools",
	"description": "Git context menu commands to run from file explorer",
	"version": "1.0.0",
	"repository": {
	    "type": "git",
	    "url": "https://github.com/awhitenose/vscode-git-tools.git"
	},
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:explorerGitTools.gitStage",
        "onCommand:explorerGitTools.gitUnstage"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "explorerGitTools.gitStage",
				"title": "Git Stage"
			},
			{
				"command": "explorerGitTools.gitUnstage",
				"title": "Git Unstage"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "filesExplorerFocus",
					"command": "explorerGitTools.gitStage",
					"group": "explorerGitToolsGroup@1"
				},
				{
					"when": "filesExplorerFocus",
					"command": "explorerGitTools.gitUnstage",
					"group": "explorerGitToolsGroup@2"
				}
			]
		}
	},
	"extensionDependencies": [
		"vscode.git"
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4",
		"@vscode/test-electron": "^2.1.3"
	}
}
